<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"  MinHeight="{Binding MinHeight, ElementName=but1}"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="but1" Grid.Row="0" Background="Azure" Height="100" MinHeight="20" VerticalContentAlignment="Stretch"/>
        <Button Grid.Row="2" Background="Red"/>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
